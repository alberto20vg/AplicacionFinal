<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewIngrediente"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayoutIngredientes"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/idImagenIngrediente2"
            android:layout_width="74dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/idNombreIngrediente2"
            android:layout_width="84dp"
            android:layout_height="34dp"
            android:layout_marginStart="44dp"

            android:text="TextView"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/idImagenIngrediente2"
            app:layout_constraintStart_toEndOf="@+id/idImagenIngrediente2"
            app:layout_constraintTop_toTopOf="@+id/idImagenIngrediente2" />

        <ImageButton
            android:id="@+id/button13"
            android:layout_width="50dp"
            android:layout_height="43dp"
            android:layout_marginStart="40dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/idNombreIngrediente2"
            app:layout_constraintStart_toEndOf="@+id/idNombreIngrediente2"
            app:layout_constraintTop_toTopOf="@+id/idNombreIngrediente2"
            app:layout_constraintVertical_bias="0.444"
            app:srcCompat="@drawable/mas_menos" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>